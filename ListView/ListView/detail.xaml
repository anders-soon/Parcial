<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ListView.detail">

    <StackLayout Padding="10,12" BackgroundColor="#FFFFFF" >
        <StackLayout Orientation="Vertical">
            <Image Source="laptop.png" WidthRequest="70" HeightRequest="70"></Image>
            <Label Text="Detalle Computadoras" HorizontalTextAlignment="Center"  FontSize="25"></Label>
            <ListView x:Name="detalle">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Nombre}" Detail="{Binding Descripcion}">
                           
                        </TextCell>

                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </StackLayout>
</ContentPage>

